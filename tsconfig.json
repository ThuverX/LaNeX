{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2021"],
        "module": "ES6",
        "outDir": "./lib",
        "strict": true,
        "jsx": "react",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "types": ["node"],
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "ui"]
}